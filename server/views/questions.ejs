<!-- questions.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questions</title>
</head>
<body>
    <h1>Welcome to Questions Page</h1>
    
    <% if (questions && questions.length > 0) { %>
        <ul>
            <% questions.forEach(question => { %>
                <li>
                    <h2><%= question.title %></h2>
                    <ul>
                        <li>
                            <form action="/check-answer" method="post">
                                <input type="hidden" name="questionId" value="<%= question.id %>">
                                <button type="submit" name="optionId" value="<%= question.option1 %>"><%= question.option1 %></button>
                            </form>
                        </li>
                        <li>
                            <form action="/check-answer" method="post">
                                <input type="hidden" name="questionId" value="<%= question.id %>">
                                <button type="submit" name="optionId" value="<%= question.option2 %>"><%= question.option2 %></button>
                            </form>
                        </li>
                        <li>
                            <form action="/check-answer" method="post">
                                <input type="hidden" name="questionId" value="<%= question.id %>">
                                <button type="submit" name="optionId" value="<%= question.option3 %>"><%= question.option3 %></button>
                            </form>
                        </li>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No questions available.</p>
    <% } %>
</body>
</html>
