<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forms</title>
</head>
<body>
    <h1>Welcome to Forms Page</h1>
    
    <% if (forms && forms.length > 0) { %>
        <ul>
            <% forms.forEach(form => { %>
                <li><a href="/questions/<%= form.id %>"><%= form.name %></a></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No forms available.</p>
    <% } %>
</body>
</html>
